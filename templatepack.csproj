<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageType>Template</PackageType>
    <PackageVersion>1.0</PackageVersion>
    <PackageId>Equinor.Procosys.DddApiTemplate</PackageId>
    <Title>Equinor ProCoSys DDD API Template</Title>
    <Authors>Equinor ASA</Authors>
    <Description>Templates to use when creating a REST API for ProCoSys</Description>
    <PackageTags>dotnet-new;templates;Equinor;ProCoSys;DDD;Api</PackageTags>

    <TargetFramework>netcoreapp3.1</TargetFramework>

    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="templates\**\*" Exclude="templates\**\bin\**;templates\**\obj\**" />
    <Compile Remove="**\*" />
  </ItemGroup>

</Project>